<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthBridge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>

    @if (ViewContext.RouteData.Values["controller"].ToString() != "DoctorNurse" ||
    (ViewContext.RouteData.Values["action"].ToString() != "AdminDashboard" &&
    ViewContext.RouteData.Values["action"].ToString() != "DoctorNurseDashboard" &&
    ViewContext.RouteData.Values["action"].ToString() != "PatientDashboard"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm fixed-top p-2">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/images/weblogo.png" alt="HealthBridgelogo" height="40">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("About", "Home")">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Action("Contact", "Home")">Contact</a>
                            </li>
                        </ul>
                        <div class="d-flex">
                            <a href="@Url.Action("Login", "Home")" class="btn btn-outline-success me-2">Login</a>
                            <a href="@Url.Action("Signup", "Home")" class="btn btn-warning">Signup</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="containerhome" style="padding-top: 65px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @if (ViewContext.RouteData.Values["controller"].ToString() != "DoctorNurse" ||
    (ViewContext.RouteData.Values["action"].ToString() != "AdminDashboard" &&
    ViewContext.RouteData.Values["action"].ToString() != "DoctorNurseDashboard" &&
    ViewContext.RouteData.Values["action"].ToString() != "PatientDashboard"))
    {
        <footer class="border-top footer text-muted py-4 bg-info mt-4">
            <div class="container mt-3">
                <div class="row">
                    @* +++++++++++++++++ Address Column +++++++++++++++++  *@
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h4 class="mb-3">Address</h4>
                        <p><i class="bi bi-geo-alt"></i> 123 Main Street, Mohali (Chandigarh)</p>
                        <p><i class="bi bi-telephone"></i> +91 9128202345</p>
                        <p><i class="bi bi-envelope"></i> sumit379@gmail.com</p>
                        <div class="d-flex">
                            <a href="#" class="me-3 text-muted"><i class="bi bi-telegram"></i></a>
                            <a href="#" class="me-3 text-muted"><i class="bi bi-linkedin"></i></a>
                            <a href="#" class="me-3 text-muted"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>

                    @*   +++++++++++++++++++++++ Services Column +++++++++++++++ *@
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h4 class="mb-3">Services</h4>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-chevron-right"></i> Dental</li>
                            <li><i class="bi bi-chevron-right"></i> Neurologie</li>
                            <li><i class="bi bi-chevron-right"></i> Cardio</li>
                            <li><i class="bi bi-chevron-right"></i> Orthopedy</li>
                            <li><i class="bi bi-chevron-right"></i> Laboratory</li>
                        </ul>
                    </div>

                    @*   ++++++++++++++++ Quick Links Column +++++++++++++++++ *@
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h4 class="mb-3">Quick Links</h4>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-chevron-right"></i> About Us</li>
                            <li><i class="bi bi-chevron-right"></i> Contact Us</li>
                            <li><i class="bi bi-chevron-right"></i> Our Services</li>
                            <li><i class="bi bi-chevron-right"></i> Terms & Conditions</li>
                            <li><i class="bi bi-chevron-right"></i> Support</li>
                        </ul>
                    </div>

                    @*  ++++++++++++++++++ Newsletter Column +++++++++++++++++++ *@
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h4 class="mb-3">Newsletter</h4>
                        <p>Subscribe to our newsletter to receive the latest updates.</p>
                        <form>
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" placeholder="Enter your email" aria-label="Email">
                                <button class="btn btn-primary" type="button">Signup</button>
                            </div>
                        </form>
                    </div>
                </div>

                <hr class="w-100 text-white" />
                <div class="text-center align-content-center text-white">
                    <p>&copy; 2024 HealthBridge</p>
                </div>
            </div>
        </footer>
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>


</body>
</html>
